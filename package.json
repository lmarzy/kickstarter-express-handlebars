{
  "name": "kickstarter-express-handlebars",
  "version": "1.0.0",
  "description": "Kickstarter for an Express app using Handlebars for templating",
  "main": "app.js",
  "scripts": {
    "start": "nodemon app/app.js",
    "inspector": "node-inspector",
    "debug": "nodemon --debug app/app.js",
    "scss": "node-sass assets/css/*.scss -o app/public/css",
    "autoprefixer": "postcss -u autoprefixer -r app/public/css/*",
    "vr": "postcss -u postcss-vr -r app/public/css/*",
    "pxtorem": "postcss -u postcss-pxtorem -r app/public/css/*",
    "focus": "postcss -u postcss-focus -r app/public/css/*",
    "build:css": "npm run scss && npm run vr && npm run pxtorem && npm run focus",
    "lint:js": "eslint assets/js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lmarzy/kickstarter-express-handlebars.git"
  },
  "author": "Lee Marsden",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lmarzy/kickstarter-express-handlebars/issues"
  },
  "homepage": "https://github.com/lmarzy/kickstarter-express-handlebars#readme",
  "dependencies": {
    "express": "^4.14.0",
    "express-handlebars": "^3.0.0",
    "node-inspector": "^0.12.8",
    "nodemon": "^1.10.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "css-mqpacker": "^5.0.1",
    "cssnano": "^3.7.5",
    "eslint": "^3.5.0",
    "postcss-cli": "^2.6.0",
    "postcss-focus": "^1.0.0",
    "postcss-pxtorem": "^3.3.1",
    "postcss-vr": "^3.0.1"
  }
}
